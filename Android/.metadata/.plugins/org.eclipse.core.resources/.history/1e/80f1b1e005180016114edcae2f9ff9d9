import java.util.Scanner;

public class Actividad02_04 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		// 1
		System.out.println("EJERCICIO 1");
		int numero, suma = 0;
		String salida;
		System.out.println("Número:"); numero = teclado.nextInt();
		salida = Integer.toString(numero);
		
		for (int i = numero; i >= 0; i--) {
			suma += i;
			if (i < numero) {
				salida += " + " + i;
			}
		}
		
		System.out.println("Resultado: " + salida + " = " + suma);
		
		// 2
		int numero1, numero2;
		System.out.println("\nEJERCICIO 2");
		System.out.println("Número 1:"); numero1 = teclado.nextInt();
		System.out.println("Número 2:"); numero2 = teclado.nextInt();
		
		System.out.println("\nIncremento de número 1:");
		while (numero1 != numero2) {
			if (numero1 <= numero2) {
				System.out.println(numero1);
				numero1++;
			}
		}
		
		System.out.println("\nDecremento de número 2:");
		do {
			System.out.println(numero2);
			numero2--;
		} while (numero2 != 0);
		
		// 3
		int operador;
		
		teclado.close();
	}
}
