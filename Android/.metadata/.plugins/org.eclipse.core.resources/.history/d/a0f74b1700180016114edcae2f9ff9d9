import java.util.Scanner;

public class Actividad02_02 {
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		// 1
		double estatura;
		System.out.println("Estatura de la persona en metros:"); estatura = Double.parseDouble(teclado.nextLine());
		
		if (estatura >= 2.0) {
			System.out.println("La persona puede jugar basketball.");
		}
		else {
			System.out.println("La persona no puede jugar basketball.");
		}
		
		// 2
		int edad;
		System.out.println("Edad de la persona:"); edad = Integer.parseInt(teclado.nextLine());
		
		if (edad >= 18) {
			System.out.println("La persona es mayor de edad.");
		}
		else {
			System.out.println("La persona es menor de edad.");
		}
		
		// 3
		int numero1, numero2, numero3;
		System.out.println("Número 1:"); numero1 = teclado.nextInt();
		System.out.println("Número 2:"); numero2 = teclado.nextInt();
		System.out.println("Número 3:"); numero3 = teclado.nextInt();
		
		if (numero1 > numero2) {
			if (numero1 > numero3) {
				System.out.println("Número 1 es mayor a número 2 y mayor a número 3");
			}
			else {
				System.out.println("Número 1 es mayor a número 2 y menor a número 3");
			}
		}
		else if (numero2 > numero3) {
			System.out.println("Número 2 es mayor a número 1 y mayor a número 3");
		}
		else {
			System.out.println("Número 3 es mayor a número 1 y menor a número 2");
		}
		
		
		// 4
		
		teclado.close();
	}
}
