package Actividad03_02;

import java.util.Scanner;

public class SumaDeNumeros {
	public static int SumaNumeros(int n) {
		System.out.printf("%d +", n);
		if (n == 1) {
			return n;
		}
		else {
			return n + SumaNumeros(n - 1);
		}
	}
	
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int numero;
		
		System.out.printf("Número: %d\n"); numero = Integer.parseInt(teclado.nextLine());
		System.out.printf("La suma de 1 hasta %d es = %d", numero, SumaNumeros(numero));
		
		teclado.close();
	}
}
